
<div id="navbar">
	<a href="/">
		<img id="big_logo" src="/imgs/logo.png">
	</a>
	<form name="zipcode_form" method="post" action="/search" onsubmit="return validateForm()">
		<div class="input-group">
			<input class="form-control" placeholder="Enter ZIP Code (e.g. 20742)" type="text" name="zip"></input>
			<span class="input-group-btn">
				<button type="submit" class="btn btn-danger"><span class="glyphicon glyphicon-search" aria-hidden="true"></span></button>
			</span>
		</div>
	</form>
</div>


{{#each reps}}
	<div class="representative_div">
		<div class="rep_img_div">
			<img class="rep_img" src="/congress_pictures_files/high-res/{{this.govtrack_id}}-200px.jpeg">
		</div>	
		<div class="bio_div">
			<a href="/rep/{{this.bioguide_id}}"><h3>{{this.title}}. {{this.first_name}} {{this.last_name}} [{{this.party}} - {{this.state}}{{#if this.district}} (District {{this.district}}){{/if}}]</h3></a>
			<br>
			<p class="bio">{{this.bio}}</p>
		</div>
	</div>
{{/each}}

