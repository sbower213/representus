<img src="/congress_pictures_files/high-res/{{person.govtrack_id}}-200px.jpeg">
{{person.title}} {{person.first_name}} {{person.last_name}}
{{#if person.district}}
    Representative for District {{person.district}} of {{person.state_name}}
{{else}}
    Senator for {{person.state_name}}
{{/if}}

<a href="/contact/{{person.bioguide_id}}"><button>Contact Them!</button></a>
<a href="{{person.website}}">Personal Website</a>
<h2>Contact Information</h2>
<p>Phone #: {{person.phone}}</p>
<p>Email: {{person.oc_email}}</p>
<h2>Voting History</h2>
<ul>
    {{#each votes}}
        <li>
            {{this.option.value}} | {{this.vote.question}}
        </li>
    {{/each}}
</ul>
<h2>Contributions (According to OpenSecrets.org)</h2>
<ul> 
    {{#each contributions}}
        <li>
            Organization: {{this.org_name}} | Total: ${{this.total}}
        </li>
    {{/each}}
</ul>
{{#if person.twitter_id}}
    <a class="twitter-timeline" 
       href="https://twitter.com/{{person.twitter_id}}"
       data-tweet-limit="5">
        Tweets
    </a> 
    <script async src="//platform.twitter.com/widgets.js" charset="utf-8">
    </script>
{{/if}}